@using LaEmpresa.WebApp.DTOs
@model LaEmpresa.WebApp.DTOs.UsuarioDTO

@{
    ViewData["Title"] = "ActualizarContrasenia";
}

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success">
        Nueva contraseña generada: @ViewBag.Mensaje
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<h1>Actualizar Contraseña</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ActualizarContrasenia">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Elija el usuario</label>
                <select asp-for="Id" class="form-control">
                    @foreach (UsuarioDTO usuario in ViewBag.Usuarios)
                    {
                        <option value="@usuario.Id">@usuario.Email</option>
                    }
                </select>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Seleccionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
