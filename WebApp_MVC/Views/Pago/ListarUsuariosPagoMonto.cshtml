@using LaEmpresa.WebApp.DTOs

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}
<h1>Filtrado de usuarios</h1>
<div class="row">
    <div class="col-md-4">
        <form action="ListarUsuariosPagoMonto" method="post">

            <div class="form-group">
                <label for="monto" class="control-label">Ingrese un monto:</label>
                <input type="number" name="monto" class="form-control" id="monto" />
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Mostrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (Model != null )
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Apellido
                </th>
                <th>
                    Email
                </th>
                <th>
                    Rol
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (UsuarioDTO usuario in Model)
            {
                <tr>

                    <td>
                        @usuario.Nombre
                    </td>
                    <td>
                        @usuario.Apellido
                    </td>
                    <td>
                        @usuario.Email
                    </td>
                    <td>
                        @usuario.Rol
                    </td>
                </tr>
            }
        </tbody>
    </table>
}